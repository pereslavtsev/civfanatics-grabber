{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "esModuleInterop": true,
    "noEmit": true,
  },
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ],
  "typedocOptions": {
    "entryPoints": ["src/index.ts", "./src/managers", "./src/helpers.ts"],
    "out": "docs",
    "exclude": [
      "**/*.spec.ts*",
    ]
  }
}
